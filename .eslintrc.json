{
  "extends": [
    "eslint:recommended", 
    "plugin:import/errors",  
    "plugin:react/recommended",
    "plugin:react-hook/recommended",
    "prettier"
  ],
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scopre": 0
  },
  "plugins": ["react", "import"],
  "parserOptions": {
    "ecmaversion": "latest",
    "sourceType": "module",
    "ecmafeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "import/resolver": {
    "node": {
      "extensions": [".js", ".jsx"]
    }
  }
}